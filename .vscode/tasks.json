{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Tier-1380: Full Validation",
			"type": "shell",
			"command": "bun",
			"args": [
				"scripts/validate-pointers.ts",
				"--bun-native",
				"--network-concurrency",
				"${input:networkConcurrency}"
			],
			"group": "test",
			"problemMatcher": {
				"pattern": {
					"regexp": "^(ERROR|WARN|INFO):\\s*(.+)$",
					"severity": 1,
					"message": 2
				}
			}
		},
		{
			"label": "Tier-1380: Smart Validate",
			"type": "shell",
			"command": "bun",
			"args": ["run", "scripts/smart-validate.ts"],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"clear": true,
				"panel": "dedicated"
			},
			"problemMatcher": []
		},
		{
			"label": "Tier-1380: LoopGuard Demo",
			"type": "shell",
			"command": "bun",
			"args": ["scripts/demo-loop-guard.ts"],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"clear": true
			}
		},
		{
			"label": "Tier-1380: Reset Checkpoints",
			"type": "shell",
			"command": "rm",
			"args": ["-rf", ".tier1380-checkpoints"],
			"group": "build",
			"presentation": {
				"reveal": "silent"
			},
			"windows": {
				"command": "rmdir",
				"args": ["/s", "/q", ".tier1380-checkpoints"]
			}
		},
		{
			"label": "Tier-1380: Makefile Validate",
			"type": "shell",
			"command": "make",
			"args": ["validate"],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false
			}
		},
		{
			"label": "Tier-1380: Full Pipeline",
			"type": "shell",
			"command": "make",
			"args": ["all"],
			"group": "build",
			"dependsOn": ["Tier-1380: Reset Checkpoints"],
			"dependsOrder": "sequence",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"clear": true
			}
		},
		{
			"label": "Tier-1380: Quick Metrics",
			"type": "shell",
			"command": "bun",
			"args": ["-e", "import{metricsFeed}from'./lib/tier1380-metrics'; console.log(metricsFeed.toRSS());"],
			"group": "test",
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			}
		},
		{
			"label": "Tier-1380: Memory Pool Status",
			"type": "shell",
			"command": "bun",
			"args": ["-e", "import{globalPool}from'./lib/memory-pool'; console.table(globalPool.stats);"],
			"group": "test",
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			}
		}
	],
	"inputs": [
		{
			"id": "networkConcurrency",
			"type": "pickString",
			"description": "Network concurrency level",
			"options": ["4", "8", "16", "32"],
			"default": "8"
		}
	]
}
